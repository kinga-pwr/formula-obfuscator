<mah:MetroWindow  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="FormulaObfuscator.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormulaObfuscator.Views"
        mc:Ignorable="d"
        Title="Settings"
        WindowState="Normal"
        Height="850"
        Width="800">

    <StackPanel Margin="30,30,0,0">
        <Label Content="Common Settings"/>
        <StackPanel Orientation="Horizontal" Height="50">
            <Label Content="Used letters: " Width="200" HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Center" Height="34"/>
            <TextBox x:Name="TextBoxLetters" TextWrapping="NoWrap" Width="200" Margin="0,5,0,5" Height="34"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="50">
            <Label Content="Used Greek letters: " Width="200" HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Center" Height="34"/>
            <TextBox x:Name="TextBoxGreekLetters" TextWrapping="NoWrap" Width="200" Margin="0,5,0,5" Height="34"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="50">
            <Label Content="Used numbers: " Width="200" HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Center" Height="34"/>
            <Label Content="Min: " Width="60" HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Center" Height="34"/>
            <TextBox x:Name="TextBoxMin" TextWrapping="NoWrap" Width="50" Margin="0,5,0,5" Height="34"/>
            <Label Content="Max: " Width="60" HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Center" Height="34"/>
            <TextBox x:Name="TextBoxMax" TextWrapping="NoWrap" Width="50" Margin="0,5,0,5" Height="34"/>
        </StackPanel>
        <Label Content="Obfuscate Settings"/>
        <StackPanel Orientation="Horizontal" Height="50">
            <Label Content="Recurence level: " Width="200" HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Center" Height="34"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="50">
            <Label Content="Tree walks: " Width="200" HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Center" Height="34"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="50">
            <Label Content="Obfuscate level: " Width="200" HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Center" Height="34"/>
            <mah:DropDownButton Margin="5" Width="100"
                    Content="Levels"
                    x:Name="DropDownButtonObfuscatedLevels">
            </mah:DropDownButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,30,0" HorizontalAlignment="Center">
            <StackPanel>
                <Label Content="Choose methods for equals one generator: " HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Center" Height="34"/>
                <CheckBox Content="Polynomial" Margin="25,0,0,0"/>
                <CheckBox Content="Fraction" Margin="25,0,0,0"/>
                <CheckBox Content="Trigonometry" Margin="25,0,0,0"/>
                <CheckBox Content="Root" Margin="25,0,0,0"/>
                <CheckBox Content="Trigonometry Redundancy" Margin="25,0,0,0"/>
                <CheckBox Content="Equation" Margin="25,0,0,0"/>
            </StackPanel>
            <StackPanel Margin="100,0,0,0">
                <Label Content="Choose methods for equals one generator: " HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Center" Height="34"/>
                <CheckBox Content="Polynomial" Margin="25,0,0,0"/>
                <CheckBox Content="Fraction" Margin="25,0,0,0"/>
                <CheckBox Content="Trigonometry" Margin="25,0,0,0"/>
                <CheckBox Content="Integral" Margin="25,0,0,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center">

        </StackPanel>
        <Label Content="Test Generator Settings" Margin="0,30,0,0" />
        <StackPanel Orientation="Horizontal" Margin="0,10,30,0" HorizontalAlignment="Center">
            <StackPanel>
                <Label Content="Choose methods for samples generator: " HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Center" Height="34"/>
                <CheckBox Content="DetSumPi" Margin="25,0,0,0"/>
                <CheckBox Content="Fi" Margin="25,0,0,0"/>
                <CheckBox Content="FuncBracket" Margin="25,0,0,0"/>
                <CheckBox Content="Integral" Margin="25,0,0,0"/>
                <CheckBox Content="Limit" Margin="25,0,0,0"/>
                <CheckBox Content="SqrtRecursive" Margin="25,0,0,0"/>
                <CheckBox Content="Sum" Margin="25,0,0,0"/>
            </StackPanel>
            <StackPanel Margin="30,0,0,0">
                <Label Content="Choose methods for simple generator: " HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Center" Height="34"/>
                <CheckBox Content="Fraction"/>
                <CheckBox Content="Power"/>
                <CheckBox Content="Root"/>
            </StackPanel>
            <StackPanel Margin="30,0,0,0">
                <Label Content="Choose methods for complex generator: " HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Center" Height="34"/>
                <CheckBox Content="Fraction"/>
                <CheckBox Content="Root"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Height="35" HorizontalAlignment="Right">
            <Button Content="Wczytaj" Margin="0,0,5,0"/>
            <Button Content="Zapisz na dysku" Margin="0,0,5,0"/>
            <Button Content="Zapisz" Margin="0,0,30,0"/>
        </StackPanel>
    </StackPanel>

</mah:MetroWindow>